# NPM Authentication (required for private packages)
NPM_TOKEN=your_npm_token_here

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ianwilson
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ianwilson

# S3 Storage (AWS S3, Linode Object Storage, etc.)
S3_REGION=us-lax-1
S3_ENDPOINT=https://us-lax-1.linodeobjects.com
S3_PATH_STYLE=false
S3_BUCKET=your_bucket_name
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_CDN_DOMAIN=your_cdn_domain

# Email (if using nodemailer)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_password

# Cloudflare Turnstile (if using)
# TURNSTILE_SECRET_KEY=your_secret_key

# Application
NODE_ENV=production
PORT=3000
